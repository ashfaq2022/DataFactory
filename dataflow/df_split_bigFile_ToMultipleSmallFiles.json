{
	"name": "df_split_bigFile_ToMultipleSmallFiles",
	"properties": {
		"description": "Split the source file by country ",
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"linkedService": {
						"referenceName": "ls_mission100Datalake",
						"type": "LinkedServiceReference"
					},
					"name": "PractiseDbCovidHospitalization"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ds_ADW_Stage",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [],
			"scriptLines": [
				"source(output(",
				"          country as string,",
				"          indicator as string,",
				"          date as date,",
				"          year_week as string,",
				"          value as short,",
				"          source as string,",
				"          url as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     limit: 20,",
				"     ignoreNoFilesFound: false,",
				"     format: 'delimited',",
				"     fileSystem: 'inputdata',",
				"     folderPath: 'PractiseStage',",
				"     fileName: 'CovidHospitalizationReport.csv',",
				"     columnDelimiter: ',',",
				"     escapeChar: '\\\\',",
				"     quoteChar: '\\\"',",
				"     columnNamesAsHeader: true) ~> PractiseDbCovidHospitalization",
				"PractiseDbCovidHospitalization sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     rowUrlColumn:'country',",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sink1"
			]
		}
	}
}